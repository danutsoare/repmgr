# Log rotation configuration for repmgr {{ cluster_name }}
# Generated by Ansible

/var/log/repmgr/{{ postgresql_version }}/repmgr-{{ cluster_name }}.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 0644 {{ postgresql_user }} {{ postgresql_group }}
    postrotate
        # Send HUP signal to repmgrd to reopen log files
        /bin/systemctl reload repmgrd-{{ postgresql_version }}.service > /dev/null 2>&1 || true
    endscript
}